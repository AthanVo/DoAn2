    <script>
        // Thực hiện tìm kiếm
        function checkEnter(event) {
            if (event.keyCode === 13) { // Enter key
                performSearch();
            }
        }

        function performSearch() {
            const searchTerm = document.getElementById('searchInput').value.trim();
            if (searchTerm) {
                window.location.href = `/Home/Search?query=${encodeURIComponent(searchTerm)}`;
            }
        }


        function performSearch() {
            var searchTerm = $('#searchInput').val();
            var pageNumber = $('.pagination-container .active').text();

            if (searchTerm.trim() !== "") {
                // Thay đổi đường dẫn trực tiếp đến trang tìm kiếm
                window.location.href = '/Home/Search?query=' + encodeURIComponent(searchTerm) + '&page=' + pageNumber;
            }
        }

    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const token = localStorage.getItem('AuthToken');
            if (token) {
                console.log('Token:', token);
            } else {
                console.log('Không có token trong Local Storage');
            }
        });
        const token = localStorage.getItem('AuthToken');
        fetch('/SomeApiEndpoint', {
            method: 'GET',
            headers: {
                'Authorization': `Bearer ${token}`
            }
        })
            .then(response => response.json())
            .then(data => console.log(data))
            .catch(error => console.error('Error:', error));



        document.getElementById('loginForm').addEventListener('submit', function (e) {
            e.preventDefault(); // Ngăn form gửi đi

            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            fetch('/Login/Dangnhap', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ tendn: username, matkhau: password })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Lưu token vào Local Storage
                        localStorage.setItem('AuthToken', data.token);

                        // Hiển thị thông báo thành công và chuyển hướng
                        alert('Đăng nhập thành công');
                        window.location.href = '/Home/Index';
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        });
    </script>

